{
  "name": "tie-fe",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "build": "ng build",
    "build:ci": "ng build --output-path dist --prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "export JEST_JUNIT_OUTPUT='./reports/unit/results.xml' && jest --coverage --coverageDirectory=reports/coverage/",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "e2e:ci": "ng e2e --base-url http://${E2E_TEST_ROUTE}/ --protractor-config e2e/protractor.conf.ci.js  --dev-server-target=",
    "clean": "rm -rf reports dist package-contents*",
    "package": "mkdir -p package-contents && cp -vr dist Dockerfile package-contents && zip -r package-contents.zip package-contents",
    "prepare-nexus": "curl -X POST  -u ${NEXUS_CREDS} -H 'Content-Type: application/json' -H 'Accept: application/json' -d @nexus.json http://${NEXUS_SERVICE_HOST}:${NEXUS_SERVICE_PORT}/service/siesta/rest/v1/script && curl -X POST  -u ${NEXUS_CREDS} -H 'Content-Type: text/plain' -H 'Accept: application/json' http://${NEXUS_SERVICE_HOST}:${NEXUS_SERVICE_PORT}/service/siesta/rest/v1/script/labs-static/run",
    "publish": "curl -vvv -u ${NEXUS_CREDS} --upload-file package-contents.zip http://${NEXUS_SERVICE_HOST}:${NEXUS_SERVICE_PORT}/repository/labs-static/com/redhat/fe/${JOB_NAME}.${BUILD_NUMBER}/package-contents.zip",
    "publish:get": "curl -vvv http://${NEXUS_CREDS}@${NEXUS_SERVICE_HOST}:${NEXUS_SERVICE_PORT}/repository/labs-static/com/redhat/fe/${BUILD_TAG}/package-contents.zip -o package-contents.zip"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "core-js": "^2.5.4",
    "rxjs": "~6.2.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-builders/jest": "^1.2.3",
    "@angular-devkit/build-angular": "~0.8.0",
    "@angular/cli": "~6.2.2",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^23.3.2",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.3.0",
    "fs-extra": "^7.0.0",
    "jasmine-core": "~2.99.1",
    "jasmine-reporters": "^2.3.2",
    "jasmine-spec-reporter": "^4.2.1",
    "jest": "^23.6.0",
    "jest-junit": "^5.1.0",
    "jest-preset-angular": "^6.0.1",
    "protractor": "~5.4.0",
    "protractor-html-reporter-2": "^1.0.4",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~2.9.2"
  }
}
